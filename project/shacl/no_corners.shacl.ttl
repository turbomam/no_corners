@prefix PATO: <http://purl.obolibrary.org/obo/PATO_> .
@prefix no_corners: <https://w3id.org/turbomam/no_corners/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

schema:Thing a sh:NodeShape ;
    sh:closed true ;
    sh:description "A generic grouping for any identifiable entity" ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:description "A unique identifier for a thing" ;
            sh:maxCount 1 ;
            sh:order 0 ;
            sh:path schema:identifier ],
        [ sh:description "A human-readable description for a thing" ;
            sh:maxCount 1 ;
            sh:order 2 ;
            sh:path schema:description ],
        [ sh:description "A human-readable name for a thing" ;
            sh:maxCount 1 ;
            sh:order 1 ;
            sh:path schema:name ] ;
    sh:targetClass schema:Thing .

no_corners:PersonCollection a sh:NodeShape ;
    sh:closed true ;
    sh:description "A holder for Person objects" ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:class no_corners:Person ;
            sh:nodeKind sh:IRI ;
            sh:order 0 ;
            sh:path no_corners:entries ] ;
    sh:targetClass no_corners:PersonCollection .

no_corners:Person a sh:NodeShape ;
    sh:closed true ;
    sh:description "Represents a Person" ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:description "A human-readable name for a thing" ;
            sh:maxCount 1 ;
            sh:order 5 ;
            sh:path schema:name ],
        [ sh:description "A unique identifier for a thing" ;
            sh:maxCount 1 ;
            sh:order 4 ;
            sh:path schema:identifier ],
        [ sh:description "A human-readable description for a thing" ;
            sh:maxCount 1 ;
            sh:order 6 ;
            sh:path schema:description ],
        [ sh:description "living or dead status" ;
            sh:in ( PATO:0001421 PATO:0001422 "UNKNOWN" ) ;
            sh:maxCount 1 ;
            sh:order 3 ;
            sh:path no_corners:vital_status ],
        [ sh:description "Number of years since birth" ;
            sh:maxCount 1 ;
            sh:order 2 ;
            sh:path no_corners:age_in_years ],
        [ sh:description "The main email address of a person" ;
            sh:maxCount 1 ;
            sh:order 0 ;
            sh:path schema:email ;
            sh:pattern "^\\S+@[\\S+\\.]+\\S+" ],
        [ sh:description "Date on which a person is born" ;
            sh:maxCount 1 ;
            sh:order 1 ;
            sh:path schema:birthDate ] ;
    sh:targetClass no_corners:Person .

